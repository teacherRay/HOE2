                    android:layout_margin="10dp"
                    android:scaleType="centerCrop"
                    />

                <ImageView
                    android:id="@+id/image5"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="10dp"
